{
  "name": "nestjs-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ENV_POSTFIX=local nest start",
    "start:dev": "ENV_POSTFIX=dev nest start --watch",
    "start:prd": "ENV_POSTFIX=prod nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "ENV_POSTFIX=test jest",
    "test:watch": "ENV_POSTFIX=test jest --watch",
    "test:cov": "ENV_POSTFIX=test jest --coverage",
    "test:debug": "ENV_POSTFIX=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "ENV_POSTFIX=test jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "make:schema": "ts-node src/core/graphql/schema.generator.ts"
  },
  "dependencies": {
    "@nestjs/common": "8.1.2",
    "@nestjs/config": "^1.0.3",
    "@nestjs/core": "8.1.2",
    "@nestjs/graphql": "9.1.1",
    "@nestjs/platform-express": "8.1.2",
    "@nestjs/typeorm": "^8.0.2",
    "apollo-server": "3.4.0",
    "apollo-server-express": "3.4.0",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "graphql": "15.7.1",
    "graphql-query-complexity": "0.9.0",
    "graphql-subscriptions": "1.2.1",
    "mysql2": "^2.3.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.4.0",
    "ts-morph": "^13.0.3",
    "typeorm": "^0.2.38",
    "typeorm-naming-strategies": "^2.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.4",
    "@nestjs/schematics": "8.0.4",
    "@nestjs/testing": "8.1.2",
    "@types/express": "4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "16.11.6",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "supertest": "6.1.6",
    "ts-jest": "27.0.7",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.11.0",
    "typescript": "4.4.2",
    "husky": "^7.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,md}": "npm run format"
  }
}
